<nav class="navBar">
    <a href="/cart">Cart</a>
    <a href="/products">Products</a>
    <a href="/createProducts">Create Products</a>
</nav>

<div id="search">
    <input type="text" id="searchInput">
    <div id="searchResults">
        {{#each filterProduct.docs}}
            <p>{{title}}</p>
        {{/each}}
    </div>
</div>

<section>

<div class="productFilters">

        <ul><h2>Filtrar por</h2>
        <li class="all">Todos</a></li>
        <h3>Precio</h3>
        <li>Mayor <input type="checkbox" name="" class="price" value="-1"></li>
        <li>Menor <input type="checkbox" name="" class="price" value="1"></li>
        <h3>Categoría</h3>
        <li>Tecnologia <input type="checkbox" name="" class="category" value="Tecnología"></li>
        <li>Ropa <input type="checkbox" name="" class="category" value="Ropa"></li>
        <li>Herramientas <input type="checkbox" name="" class="category" value="Herramientas"></li>
        <li>Deportes <input type="checkbox" name="" class="category" value="Deportes"></li>
        <li>Juguetes <input type="checkbox" name="" class="category" value="Juguetes"></li>
        <h3>Stock</h3>
        <li>Disponible <input type="checkbox" name="" class="stock" value="true"></li>
        <li>No disponible <input type="checkbox" name="" class="stock" value="false"></li>
        </ul>

</div>

<div class="productsContainer">
    {{#if products.docs}}

    {{#each products.docs}}
        <div class="product">
            <img src={{image}}>
            <p class="title">{{title}}</p>
            <p class="price">${{price}}</p>
            <button id={{_id}} class="addToCart">Add to cart</button>
            <button id={{_id}} class="details">Details</button>
            <button id={{_id}} class="delete">Delete</button>
        </div>
    {{/each}}
    {{else}}
    <h2>No hay productos disponibles</h2>
    {{/if}}
</div>

</section>


<div class="pagesContainer">
    <button class="prev" id={{products.prevPage}}> {{products.prevPage}} </button><p>{{products.page}}</p> <button class="next" id={{products.nextPage}}>{{products.nextPage}}  </button>
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/home.js"></script>